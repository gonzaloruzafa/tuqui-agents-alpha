{
  "version": "1.0.0",
  "description": "Spicy E2E Suite - Validating Aggregation & Real Data vs Hallucinations",
  "tenantId": "de7ef34a-12bd-4fe9-9d02-3d876a9393c2",
  "suites": [
    {
      "id": "spicy-aggregation-check",
      "name": "Spicy Aggregation Check",
      "category": "odoo",
      "description": "Ensures the agent aggregates data instead of vomiting 50 lines of JSON or hallucinating counts",
      "tests": [
        {
          "id": "SPICY-001",
          "critical": true,
          "messages": [{ "role": "user", "content": "Total de ventas primera semana de diciembre 2025?" }],
          "expectations": { 
            "shouldRouteToAgent": "odoo",
            "shouldContain": ["Total", "$"],
            "shouldNotContain": ["50 registros", "32200.81", "3401173.83"], 
            "shouldHaveData": true
          }
        },
        {
          "id": "SPICY-002",
          "critical": true,
          "messages": [
              { "role": "user", "content": "ventas primera semana de diciembre 2025?" },
              { "role": "assistant", "content": "En la primera semana de diciembre tuvimos ventas por $X..." },
              { "role": "user", "content": "dame top 10 por vendedor" }
          ],
          "expectations": { 
            "shouldRouteToAgent": "odoo",
            "shouldContain": ["1.", "10."],
            "shouldNotContain": ["Sale order", "SO00"],
            "shouldHaveData": true
          }
        },
        {
            "id": "SPICY-003",
            "critical": true,
            "messages": [
                { "role": "user", "content": "ventas primera semana de diciembre 2025?" },
                { "role": "assistant", "content": "..." },
                { "role": "user", "content": "top 10 por cliente?" }
            ],
            "expectations": { 
              "shouldRouteToAgent": "odoo",
              "shouldContain": ["1.", "10."],
              "shouldHaveData": true
            }
        }
      ]
    }
  ]
}
