    {
      "id": "conversation-memory",
      "name": "Memoria Conversacional",
      "category": "conversation",
      "description": "Tests de retención de contexto en conversaciones largas - CRÍTICO para UX",
      "tests": [
        {
          "id": "memory-001",
          "critical": true,
          "messages": [
            { "role": "user", "content": "¿Cuántas ventas hicimos ayer?" },
            { "role": "assistant", "content": "Ayer se realizaron 15 ventas por un total de $2.340.000" },
            { "role": "user", "content": "¿Y anteayer?" },
            { "role": "assistant", "content": "Anteayer fueron 12 ventas por $1.890.000" },
            { "role": "user", "content": "¿Cuál día fue mejor?" }
          ],
          "expectations": { "shouldUseContext": true, "shouldNotContain": ["¿a qué te referís?", "¿cuál día?"] }
        },
        {
          "id": "memory-002",
          "critical": true,
          "messages": [
            { "role": "user", "content": "Buscame info sobre el cliente Clínica Dental Norte" },
            { "role": "assistant", "content": "Clínica Dental Norte es un cliente activo con compras por $5.200.000 este año" },
            { "role": "user", "content": "¿Tiene facturas pendientes?" },
            { "role": "assistant", "content": "Sí, tiene 2 facturas pendientes por $340.000" },
            { "role": "user", "content": "Mandales un recordatorio de pago" }
          ],
          "expectations": { "shouldUseContext": true }
        },
        {
          "id": "memory-003",
          "critical": true,
          "messages": [
            { "role": "user", "content": "¿Cuántos productos tenemos en la categoría Endodoncia?" },
            { "role": "assistant", "content": "Hay 45 productos en la categoría Endodoncia" },
            { "role": "user", "content": "¿Cuáles tienen stock bajo?" }
          ],
          "expectations": { "shouldRouteToAgent": "odoo", "shouldUseContext": true }
        },
        {
          "id": "memory-5turn-001",
          "critical": true,
          "description": "5-turn dialog con cálculo basado en contexto previo",
          "messages": [
            { "role": "user", "content": "¿Cuánto vendimos ayer?" },
            { "role": "assistant", "content": "Ayer se vendieron $5.400.000" },
            { "role": "user", "content": "¿Y la semana pasada en total?" },
            { "role": "assistant", "content": "La semana pasada fueron $32.500.000" },
            { "role": "user", "content": "¿Estamos mejor o peor que el promedio diario de la semana?" }
          ],
          "expectations": { "shouldUseContext": true, "shouldNotContain": ["¿a qué te referís?", "no entiendo"] }
        },
        {
          "id": "memory-topic-switch-001",
          "critical": true,
          "description": "Cambio de tema y retorno al contexto original",
          "messages": [
            { "role": "user", "content": "¿Cuántos clientes activos tenemos?" },
            { "role": "assistant", "content": "Tenemos 450 clientes activos" },
            { "role": "user", "content": "Cambiando de tema, ¿cuál es nuestro producto más vendido?" },
            { "role": "assistant", "content": "El producto más vendido es el sillón odontológico" },
            { "role": "user", "content": "Volviendo a los clientes, ¿cuántos de esos 450 compraron ese producto?" }
          ],
          "expectations": { "shouldUseContext": true, "shouldRouteToAgent": "odoo" }
        },
        {
          "id": "memory-correction-001",
          "critical": true,
          "description": "Usuario corrige/clarifica su pregunta",
          "messages": [
            { "role": "user", "content": "¿Cuánto vendimos de autoclaves?" },
            { "role": "assistant", "content": "Vendimos 15 autoclaves este mes" },
            { "role": "user", "content": "No, me refiero en pesos, no en unidades" }
          ],
          "expectations": { "shouldUseContext": true, "shouldHaveData": true }
        },
        {
          "id": "memory-list-ref-001",
